@model IEnumerable<DOANNEW.Models.Bai_viet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Thêm bài viết mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Tiêu đề
        </th>
        <th>
            Nội dung
        </th>
        <th>
           Hình ảnh
        </th>
        <th>
          Danh mục
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TieuDe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoiDung)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hinh_Anh)
            <br />
            <img src="~/Content/IMG/@item.Hinh_Anh" width="60" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Danh_Muc.TenDanhMuc)
        </td>
        
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.BaiVietID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.BaiVietID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.BaiVietID })
        </td>
    </tr>
}

</table>
