
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/CSS-HOME/SignupDesign.css" rel="stylesheet" />
    <title>Signup</title>
</head>
<body>
    <div>
        <div class="wrapper">
            <h1>Sign Up</h1>
            <form>
                <div>
                    <label for="firstname-input">
                        <img src="~/Content/IMG/person_24dp_000000_FILL1_wght400_GRAD0_opsz24.svg" />
                    </label>
                    <input type="text" name="firstname" id="firstname-input" placeholder="Firstname" />
                </div>
                <div>
                    <label for="email-input">
                        <img src="~/Content/IMG/mail_24dp_000000_FILL1_wght400_GRAD0_opsz24.svg" />
                    </label>
                    <input type="email" name="email" id="email-input" placeholder="Email" />
                </div>
                <div>
                    <label for="password-input">
                        <img src="~/Content/IMG/lock_24dp_000000_FILL1_wght400_GRAD0_opsz24.svg" />
                    </label>
                    <input type="password" name="password" id="password-input" placeholder="Password" />
                </div>
                <div>
                    <label for="password-input">
                        <img src="~/Content/IMG/lock_24dp_000000_FILL1_wght400_GRAD0_opsz24.svg" />
                    </label>
                    <input type="password" name="repeat-password" id="repeat-password-input" placeholder="Repeat Password" />
                </div>
                <button type="submit">Sign Up</button>
            </form>
            <p>Already have an account ? @Html.ActionLink("Log In","DANGNHAP") </p>
            
        </div>
    </div>
</body>
</html>
