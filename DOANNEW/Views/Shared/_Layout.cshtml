<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title TẠP CHÍ </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--CSS-->
    <link href="~/Content/CSS-HOME/THIETKEGIAODIEN.css" rel="stylesheet" />
    <!--LINK BOOTSTRAP-->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

</head>
<body>
    <div class="container">
        <header>
            <div class="header">
                <div class="logo">LS</div>
                <div class="search-bar">
                    <input type="text" placeholder="Search">
                    <i class="fas fa-search"></i>
                </div>
                <div>
                 
                    @Html.ActionLink("Đăng nhập ", "DANGNHAP", "Account")
                    @Html.ActionLink("Đăng ký ", "DANGKY", "Account")
                </div>
            </div>
            <div>

                <ul class="nav">

                  
                            <li>@Html.ActionLink("HOME", "Index", "TrangChu", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("FASHION", "Index", "FASHION", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("CUISINE", "Index", "CUISINE", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("ENTERTAINMENT", "Index", "ENTERTAIMENT", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("SPORT", "Index", "SPORT", new { area = "" }, new { @class = "nav-link" })</li>
                       
                   

                </ul>
                <img src="~/Content/IMG/home.png"width="100%" style="margin-top:10px;margin-bottom:10px" />

                @*@{Html.RenderAction("DanhMucList", "FASHION"); }*@
            </div>
        </header>   
        @RenderBody()
    </div>




    @RenderSection("scripts", required: false)
</body>
</html>
